# Production environment configuration for Coolify deployment

# Security settings
DEBUG=False
SECRET_KEY=your-production-secret-key-here-change-this
ALLOWED_HOSTS=https://julienfreisa.dev,localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://julienfreisa.dev,http://localhost

# Database configuration (Coolify will handle this, but we need placeholders)
DATABASE_URL=postgres://user:password@db:5432/database_name

# Static files
STATIC_ROOT=/app/staticfiles

# Security headers
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Django Vite settings
DJANGO_VITE_DEV_MODE=False